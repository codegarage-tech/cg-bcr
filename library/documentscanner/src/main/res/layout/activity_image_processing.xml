<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlContainer">

    <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_above="@+id/ll_bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

        <FrameLayout
                android:id="@+id/holderImageCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp">

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"/>

        </FrameLayout>

        <team.clevel.documentscanner.libraries.PolygonView
                android:id="@+id/polygonView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"/>

    </FrameLayout>

    <LinearLayout
            android:id="@+id/ll_bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:background="#A0B8ECB8"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".2"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/iv_crop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_crop_48dp_green"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".2"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/iv_invert"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_invert_48dp_green"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".2"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/iv_align"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_align_48dp_green"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".2"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/iv_rotate"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_rotate_48dp_green"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".2"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_close_32dp_green"/>

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@color/halfTransparentBackground"/>

</RelativeLayout>