<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
                android:shape="oval">

            <solid android:color="@android:color/white"/>

            <size
                    android:width="@dimen/polygonViewCircleWidth"
                    android:height="@dimen/polygonViewCircleWidth"/>

            <stroke
                    android:width="@dimen/polygonViewStrokeWidth"
                    android:color="@color/polygonViewCircleStrokeColor"/>
        </shape>
    </item>

    <item android:drawable="@drawable/ic_tick_48dp"/>

</layer-list>