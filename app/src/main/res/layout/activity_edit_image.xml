<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/toolbar_base"/>

    <FrameLayout
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/ll_bottom_panel"
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

        <FrameLayout
                android:id="@+id/fl_processing_image_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp">

            <ImageView
                    android:id="@+id/iv_processing_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>

        </FrameLayout>

        <team.clevel.documentscanner.libraries.PolygonView
                android:id="@+id/polygonView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"/>

    </FrameLayout>

    <LinearLayout
            android:id="@+id/ll_bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:background="#A0B8ECB8"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/ll_crop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_crop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_crop_48dp_green"/>

            <TextView
                    android:id="@+id/tv_crop"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crop"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_invert"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_invert"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_invert_48dp_green"/>

            <TextView
                    android:id="@+id/tv_invert"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invert"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_align"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_align"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_align_48dp_green"/>

            <TextView
                    android:id="@+id/tv_align"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Align"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_rotate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_rotate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_rotate_48dp_green"/>

            <TextView
                    android:id="@+id/tv_rotate"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rotate"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_recognize"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_recognize"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_recognize_32dp_green"/>

            <TextView
                    android:id="@+id/tv_recognize"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recognize"/>

        </LinearLayout>

    </LinearLayout>

    <!--<ImageView
            android:id="@+id/iv_tick"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@drawable/ic_round_tick"/>-->

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

</RelativeLayout>