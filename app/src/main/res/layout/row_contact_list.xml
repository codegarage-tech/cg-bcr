<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_10">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            card_view:cardBackgroundColor="@color/colorWhite"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="2dip">

            <View
                android:id="@+id/list_item_task_view_ribbon"
                android:layout_width="5dp"
                android:layout_height="@dimen/dp_120"
                android:background="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_selected_image"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    app:srcCompat="@drawable/avatar_placeholder_circular"
                    android:visibility="gone"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.0"

                    android:paddingLeft="@dimen/dp_35"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5">

                    <TextView
                        android:id="@+id/list_item_task_text_view_task_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Rashedul Alam"
                        android:textColor="@color/colorGrey5"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:id="@+id/list_item_task_text_view_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:drawableStart="@drawable/ic_location_pin_14dp"
                        android:drawableLeft="@drawable/ic_location_pin_14dp"
                        android:drawablePadding="@dimen/dp_5"
                        android:ellipsize="end"
                        android:text="Middle Badda, Dhaka1-212"
                        android:textSize="@dimen/sp_14" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:gravity="left">

                        <LinearLayout
                            android:id="@+id/lin_email"
                            android:layout_width="45dip"
                            android:layout_height="45dip"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_blue"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_5">

                            <ImageView
                                android:layout_width="@dimen/sp_30"
                                android:layout_height="@dimen/sp_30"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/dp_5"
                                app:srcCompat="@drawable/vector_ic_email" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="45dip"
                            android:layout_height="45dip"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_toRightOf="@+id/lin_email"
                            android:background="@drawable/circle_green"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/dp_5"
                                app:srcCompat="@drawable/vector_ic_call_answer" />

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="3dip"
        android:layout_marginBottom="-20dip"
        android:gravity="center">
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center|end|bottom"
            app:srcCompat="@drawable/avatar_placeholder_circular" />

    </LinearLayout>
</RelativeLayout>